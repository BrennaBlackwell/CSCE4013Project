<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_list_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" 
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/home_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Name of Discussion"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/home_list_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="+14"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey_bg2" />

        <TextView
            android:id="@+id/home_list_item_creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="2 days ago"
            android:textAppearance="?android:attr/textAppearanceSmall" />
                
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/grey_bg2" />
        <TextView
            android:id="@+id/home_list_item_group_numPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="username"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey_bg2" />

        <TextView
            android:id="@+id/home_list_item_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="group name"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locationLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/locationImageButton"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/btn_location" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="JBHT (2.0 mi)"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey_bg2" />

        <TextView
            android:id="@+id/home_list_item_numComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="12 comments"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</LinearLayout>
