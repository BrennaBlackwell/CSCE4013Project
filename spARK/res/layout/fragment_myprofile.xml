<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Profile_Fragment"
    tools:ignore="Deprecated" >

    

    <ListView
        android:id="@+id/myRecentsList"
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myRecentsText"
        android:layout_marginTop="14dp" >
    </ListView>

    <TextView
        android:id="@+id/myRecentsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/profileImageView"
        android:layout_marginTop="25dp"
        android:text="Recent Activity"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/userPic"
        android:layout_margin="10dp"
        android:src="@drawable/profile_icon"
        tools:ignore="ContentDescription,UnknownIdInLayout" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:text="Edit"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#336699"
        android:clickable="true"
        android:onClick="EditAccount"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/userFullName"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView01"
        android:text="Full Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userFullName"
        android:layout_marginTop="18dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userName"
        android:progress="40" />

</RelativeLayout>